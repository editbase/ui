---
const { component, prevDoc, nextDoc } = Astro.props;
const { Content } = await component.render();
---

<section id="content" class="flex flex-1 flex-col doc gap-7 tracking-[-0.005em] pt-6 pb-4">
  <div class="flex flex-col gap-7 px-12  min-h-[calc(100vh_-_50px)]">
    <div class="flex flex-row items-center gap-3 text-xs text-muted-foreground/75">
      <div>Docs</div>
      <i class="flex h-1.5 w-1.5 border-r border-b border-current -rotate-45"></i>
      <div>Components</div>
      <i class="flex h-1.5 w-1.5 border-r border-b border-current -rotate-45"></i>
      <div class="text-foreground">{component.data.title}</div>
    </div>
  
    <div class="flex flex-col gap-2.5">
      <h1 class="text-3xl font-bold tracking-[-0.01em]">{component.data.title}</h1>
      <p class="text-muted-foreground text-md font-light">{component.data.description}</p>
    </div>
  
    <div class="doc">
      <Content />
    </div>
  
    <div class="flex-1"></div>
  </div>

  <div class="sticky bottom-0 bg-background/80 backdrop-blur-lg flex justify-center items-center px-12">
    <div class="flex flex-row justify-between w-full border-t py-5 border-muted-foreground/10">
      {prevDoc?.id && (
        <a 
          href={`/docs/components/${prevDoc?.slug}`}
          hx-target="section#content"
          hx-get={`/docs/components/partial/${prevDoc.slug}`}
          hx-replace-url={`/docs/components/${prevDoc.slug}`}
          hx-swap="outerHTML"
        >
          <ui-button>
            <button>
              <i class="ri-arrow-left-s-line flex justify-center items-center w-[8px]"></i>
              <span>{prevDoc?.data.title}</span>
            </button>
          </ui-button>
        </a>
      )}

      {!prevDoc?.id && (<span/>)}

      {nextDoc?.id && (
        <a 
          href={`/docs/components/${nextDoc?.slug}`}
          hx-target="section#content"
          hx-get={`/docs/components/partial/${nextDoc.slug}`}
          hx-replace-url={`/docs/components/${nextDoc.slug}`}
          hx-swap="outerHTML"
        >
          <ui-button>
            <button>
              <span>{nextDoc?.data.title}</span>
              <i class="ri-arrow-right-s-line flex justify-center items-center w-[8px]"></i>
            </button>
          </ui-button>
        </a>
      )}

      {!nextDoc?.id && (<span/>)}
    </div>
  </div>

</section>